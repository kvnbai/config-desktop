bindsym $mod+r mode "resize"
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+Shift+s mode "$mode_scrot"
set $mode_scrot [c]apture | [3]secs delay | [5]secs delay
mode "$mode_scrot" {
    bindsym c exec --no-startup-id scrot, mode "default"
    bindsym 3 exec --no-startup-id scrot -d 3, mode "default"
    bindsym 5 exec --no-startup-id scrot -d 5, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+0 mode "$mode_system"
set $mode_system [l]ock | [e]xit | [u]ser switch | [s]uspend | [h]ibernate | [r]eboot | [S]hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id bash ~/.config/display/lockscreen.sh, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym u exec --no-startup-id dm-tool switch-to-greeter, mode "default"
    bindsym s exec --no-startup-id bash ~/.config/display/lockscreen.sh & systemctl suspend, mode "default"
    bindsym h exec --no-startup-id bash ~/.config/display/lockscreen.sh & systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+n mode "$mode_fm"
# set $mode_fm [r]anger | [n]autilus
# set $mode_fm [v]ifm | [r]anger | [p]cmanfm
set $mode_fm [v]ifm | [r]anger | [n]autilus
# set $mode_fm [v]ifm | [r]anger | [n]autilus | [p]cmanfm
mode "$mode_fm" {
    bindsym r exec --no-startup-id urxvt256c-ml -e ranger, mode "default"
    bindsym v exec --no-startup-id urxvt256c-ml -e "$HOME/.config/vifm/scripts/vifm-run.sh", mode "default"
    # bindsym p exec --no-startup-id pcmanfm, mode "default"
    bindsym n exec --no-startup-id nautilus, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+c mode "$mode_code"
set $mode_code [v]im | vs[c]ode
mode "$mode_code" {
    bindsym v exec --no-startup-id urxvt256c-ml -e vim, mode "default"
    bindsym c exec --no-startup-id code, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_player"
set $mode_player [s]pawn | [k]ill | [n]cmpcpp
mode "$mode_player" {
    bindsym s exec bash ~/.config/mpd/spawn-mpd.sh, mode "default"
    bindsym k exec --no-startup-id mpd --kill, mode "default"
    bindsym n exec --no-startup-id urxvt256c-ml -e ncmpcpp --config ~/.ncmpcpp/config, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

